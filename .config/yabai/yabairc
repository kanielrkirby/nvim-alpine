sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m rule --add app=WezTerm space=^1
yabai -m rule --add app=Brave\ Browser space=^2
yabai -m rule --add app=Mullvad\ Browser space=^3
yabai -m rule --add app=Signal space=^4
yabai -m rule --add app=Figma space=^5

yabai -m config top_padding 5
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5

# Path: .config/yabai/yabairc
yabai -m signal --add event=application_launched action="yabai -m window --space $(yabai -m query --windows --space)"
yabai -m config layout bsp
yabai -m config window_gap 5
yabai -m config auto_balance on
# yabai -m config focus_follows_mouse autoraise
yabai -m config mouse_follows_focus autofocus
yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

yabai -m config drop_action swap
